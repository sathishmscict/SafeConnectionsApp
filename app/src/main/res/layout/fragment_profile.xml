                            android:layout_height="140dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"

                            android:src="@drawable/icon_userlogo"
                            app:civ_border_color="@color/colorPrimary"
                            app:civ_border_width="2dp" />


                    </FrameLayout>


                    <TextView
                        android:id="@+id/txtname"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtmobile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="+91 "
                        android:textAppearance="?android:attr/textAppearanceMedium"

                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/txtemail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:text="dfassfsddsf"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight=".45"

                    android:orientation="vertical">


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"

                        android:layout_marginRight="8dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"


                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorDivider"
                                android:visibility="gone" />


                            <LinearLayout
                                android:id="@+id/llname"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="8dp"

                                android:orientation="horizontal">


                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:orientation="horizontal">


                                    <android.support.design.widget.TextInputLayout
                                        android:id="@+id/edtFirstnameWrapper"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="4dp"

                                        android:layout_weight="1">


                                        <EditText
                                            android:id="@+id/edtFirstname"
                                            android:layout_width="fill_parent"
                                            android:layout_height="50dp"
                                            android:layout_marginRight="8dp"
                                            android:layout_weight="0.13"
                                            android:background="@null"
                                            android:gravity="center|left"
                                            android:hint="@string/hint_username"
                                            android:inputType="textEmailAddress"
                                            android:paddingLeft="4dp"

                                            android:singleLine="true"
                                            android:textColor="@color/black" />


                                    </android.support.design.widget.TextInputLayout>


                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="fill_parent"
                                        android:background="@color/colorDivider" />


                                </LinearLayout>


                                <!--
                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="0.87"
                                    android:src="@drawable/icon_username" />

                                <android.support.design.widget.TextInputLayout

                                    android:id="@+id/txtname_editWrapper"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_weight="0.13"
                                    android:gravity="center|left">

                                    <EditText
                                        android:id="@+id/txtname_edit"
                                        android:layout_width="fill_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="0.13"
                                        android:background="@null"

                                        android:gravity="center|left"
                                        android:hint="Full Name"
                                        android:inputType="textCapWords"
                                        android:paddingLeft="4dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black">

                                        <requestFocus />
                                    </EditText>

                                </android.support.design.widget.TextInputLayout>-->
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llemail"
                                android:layout_width="fill_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">


                                <android.support.design.widget.TextInputLayout

                                    android:id="@+id/txtemail_editWrapper"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="0.13"
                                    android:gravity="center|left">

                                    <EditText
                                        android:id="@+id/txtemail_edit"
                                        android:layout_width="fill_parent"
                                        android:layout_height="50dp"
                                        android:layout_marginRight="20dp"
                                        android:layout_weight="0.13"
                                        android:background="@null"
                                        android:gravity="center|left"
                                        android:hint="@string/hint_email"
                                        android:inputType="textEmailAddress"
                                        android:paddingLeft="4dp"
                                        android:singleLine="true"
                                        android:textColor="@color/black" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>


                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorDivider"
                                android:visibility="gone" />


                            <RadioGroup
                                android:id="@+id/rdGrpGender"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="8dp"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/activity_horizontal_margin"


                                android:paddingRight="@dimen/activity_horizontal_margin">


                                <RadioButton
                                    android:id="@+id/rdMale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:checked="true"

                                    android:text="Male" />


                                <RadioButton
                                    android:id="@+id/rdFemale"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:layout_weight="1"
                                    android:text="Female" />

                            </RadioGroup>

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="@color/colorDivider"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/llAddress"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"

                                android:orientation="horizontal">


                                <android.support.design.widget.TextInputLayout

                                    android:id="@+id/edtAddressWrapper"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"


                                    android:gravity="center|left">

                                    <EditText
                                        android:id="@+id/edtAddress"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@null"

                                        android:editable="false"
                                        android:enabled="false"
                                        android:gravity="center|left|top"
                                        android:hint="@string/hint_address"
                                        android:inputType="textMultiLine"
                                        android:maxLines="5"
                                        android:minLines="4"
                                        android:padding="8dp"

                                        android:paddingLeft="4dp"
                                        android:textColor="@color/black" />
                                </android.support.design.widget.TextInputLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cvOrders"
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"


                        android:clickable="true"


                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:text="My Orders"

                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorDivider" />

                            <TextView
                                android:id="@+id/txtOrders"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:text="VIEW ALL ORDERS"
                                android:textColor="@color/payu_blue" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cvAddresses"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"


                        android:clickable="true"


                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="vertical">

                            <TextView

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:text="My Addresses"

                                android:textAppearance="?android:attr/textAppearanceLarge" />

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/colorDivider" />

                            <TextView
                                android:id="@+id/txtAddresses"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginTop="10dp"
                                android:background="@null"
                                android:text="VIEW ALL ADDRESSES"
                                android:textColor="@color/payu_blue" />

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

</LinearLayout>