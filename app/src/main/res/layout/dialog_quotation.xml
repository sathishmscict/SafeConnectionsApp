<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondaryText"
        android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:text="Client Details"
        android:textColor="@color/white"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tvError"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"

            android:backgroundTint="@color/red"
            android:gravity="center"
            android:paddingLeft="8dp"

            android:text="Client Details"
            android:textColor="@color/white" />

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.87"
                android:src="@drawable/icon_complaints"
                android:tint="@color/colorPrimary" />

            <Spinner
                android:id="@+id/spnQuotation"

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.13" />
        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorSecondaryText" />

        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtQuotationWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:gravity="center|left|top">


            <EditText
                android:id="@+id/edtQuotation"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"


                android:background="@null"

                android:gravity="center|left|top"
                android:hint="Enter Complaint Details"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="10"
                android:minLines="5"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/black"
                android:visibility="visible">


            </EditText>

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorSecondaryText"

            />




        <android.support.design.widget.TextInputLayout

            android:id="@+id/edtEmailWrapper"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"


            android:gravity="center|left">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="fill_parent"
                android:layout_height="50dp"


                android:background="@null"

                android:gravity="center|left"
                android:hint="Enter Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="4dp"
                android:singleLine="true">


            </EditText>

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@color/colorSecondaryText"

            />

    </LinearLayout>

    <Button
        android:id="@+id/btnSendRequest"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/colorSecondaryText"
        android:text="Send Request"
        android:textColor="@color/white"
        android:visibility="visible" />

</LinearLayout>
